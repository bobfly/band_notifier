<%= form_for @event do |f| %>
	<div class="form-group">
		<%= f.label "Datum", class: "label-control" %>
		<%= f.date_select :event_date, {}, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Naziv", class: "label-control" %>
		<%= f.text_field :name, class:"form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Opis", class: "label-control" %>
		<%= f.text_area :description, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Cijena" %>
		<%= f.number_field :price, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Valuta" %>
		<%= f.text_field :valute, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Javni dogaÄ‘aj?" %>
		<%= f.check_box :public %>
	</div>
	<div class="form-group">
		<%= link_to "Natrag", events_path, class: "btn btn-md btn-danger" %>
		<%= f.submit "Spremi", class: "btn btn-md btn-success" %>
	</div>
<% end %>