<!DOCTYPE html>
<html>
  <head>
    <title>BandNotifier</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-dark bg-inverse">
      <a class="navbar-brand" href="#">Zdenac</a>
      <ul class="nav navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
        </li>
        <% if signed_in? %>
        <li class="nav-item">
          <%= link_to "Svirke", events_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sve svirke", all_events_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Odjava", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "Prijava", new_user_session_path, class: "nav-link" %>
        </li>
        <% end %>
      </ul>
    </nav>
    <div class="container" style="margin-top:10px;">
      <% if notice %>
      <div class="alert alert-warning alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
        <%= notice %>
      </div>
      <% end %>
      <% if alert %>
      <div class="alert alert-warning alert-dismissible fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
        <%= alert %>
      </div>
      <% end %>
      
      <p class="alert"></p>
      <div class="starter-template">
        <%= yield %>
      </div>
    </div>
  </body>
</html>